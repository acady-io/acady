{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "node"
    ],

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
